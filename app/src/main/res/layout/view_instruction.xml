<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="77dp"
    android:minHeight="8dp"
    android:minWidth="8dp"
    android:longClickable="false"
    android:focusableInTouchMode="false"
    android:nestedScrollingEnabled="false"
    android:background="@drawable/background_caucasian"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Item Name"
        android:id="@+id/txt_instruction_name"
        android:paddingTop="8dp"
android:maxLines="1"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_toStartOf="@+id/remove_item" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorDivider"
        android:id="@+id/view"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />



    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/remove_item"
        android:background="@drawable/delete"

        android:paddingRight="4dp"

        android:layout_marginEnd="41dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time"
        android:id="@+id/txt_instruction_time"
        android:layout_above="@+id/view"
        android:layout_alignStart="@+id/txt_instruction_name" />

</RelativeLayout>