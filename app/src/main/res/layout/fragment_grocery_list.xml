<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/background_grocery"
    >

    <Button

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Options"
        android:id="@+id/btn_option"

        android:background="@drawable/shopping_button"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/btn_finish"
        android:layout_alignBottom="@+id/btn_finish" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_add_item"
        android:hint="Add Item"
        android:ems="10"
        android:imeOptions="actionDone"
        android:layout_alignBottom="@+id/btn_add"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btn_add" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:text="Add"
        android:id="@+id/btn_add"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/list"
        android:background="@drawable/shopping_button"
        android:maxWidth="16dp"
        android:minHeight="8dp" />

    <ListView
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list"
        android:transcriptMode="alwaysScroll"
        android:layout_above="@+id/btn_add"
        android:layout_below="@+id/btn_option" />

    <Button
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:text="Add to Inventory"
        android:id="@+id/btn_finish"
        android:background="@drawable/shopping_button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="âœ“ All"
        android:id="@+id/btn_check_all"
        android:background="@drawable/shopping_button"
        android:padding="12dp"
        android:layout_above="@+id/list"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btn_finish" />

</RelativeLayout>